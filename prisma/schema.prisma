generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Artist {
  id       Int    @id @default(autoincrement())
  email    String @unique
  name     String
  password String

  active    Boolean?   @default(true)
  createdAt DateTime?  @default(now())
  updatedAt DateTime?  @updatedAt
  listenTo  ListenTo[]
  likeTo    LikeTo[]
  banner    Banner[]
}

model ListenTo {
  id       Int @id @default(autoincrement())
  idUser   Int
  idArtist Int
  idMusic  Int
  idAlbum  Int

  artist   Artist    @relation(fields: [idArtist], references: [id], onDelete: Cascade, onUpdate: Cascade)
  listenAt DateTime? @default(now())
}

model LikeTo {
  id       Int @id @default(autoincrement())
  idUser   Int
  idMusic  Int
  idAlbum  Int
  idArtist Int

  artist Artist @relation(fields: [idArtist], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@unique([idUser, idMusic])
}

model Banner {
  id          Int      @id @default(autoincrement())
  imageUrl    String
  description String
  startDate   DateTime @default(now())
  endDate     DateTime
  idArtist    Int

  createdAt DateTime? @default(now())
  updatedAt DateTime? @updatedAt
  Artist    Artist    @relation(fields: [idArtist], references: [id], onDelete: Cascade, onUpdate: Cascade)
}
